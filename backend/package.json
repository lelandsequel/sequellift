{
  "name": "nyc-elevator-backend",
  "version": "1.0.0",
  "description": "Backend for NYC Elevator Modernization Opportunity Finder",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:setup": "tsx src/scripts/setupDatabase.ts",
    "db:seed": "tsx src/scripts/seedDatabase.ts",
    "db:reset": "npm run db:setup && npm run db:seed"
  },
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "pg": "^8.13.1",
    "helmet": "^8.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.11.10",
    "@types/node": "^22.13.11",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2"
  }
}